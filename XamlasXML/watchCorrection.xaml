<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamlasXML.watchCorrection">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Entry x:Name="minutesEntry" FontSize="Large" Keyboard="Numeric" Placeholder="M" WidthRequest="50"/>
                <Entry x:Name="secondsEntry" FontSize="Large" Keyboard="Numeric" TextChanged="Seconds_Enforcer" Placeholder="S" WidthRequest="50" MaxLength="2"/>
            </StackLayout>

            <Label x:Name="timer" FontSize="Large" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Button x:Name="start" Text="Start" HorizontalOptions="Center" Clicked="Start_Clicked"/>

            <Button x:Name="pause" Text="Pause" HorizontalOptions="Center" Clicked="PauseClicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>